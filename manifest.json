{
  "name": "Summarizer",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Summarizes long articles for quick reading.",
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://api.flickr.com/",
    "tabs"
  ],
 "content_scripts": [{
  "matches": ["<all_urls>"],
  "js": ["dom.js"]
 }]

}
